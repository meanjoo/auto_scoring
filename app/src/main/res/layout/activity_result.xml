<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_result_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="채점 결과"
        android:textSize="30dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/txt_score_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="나의 점수는: "
        app:layout_constraintTop_toBottomOf="@id/txt_result_title"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/txt_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt_result_title"
        app:layout_constraintLeft_toRightOf="@id/txt_score_title"/>

    <TextView
        android:id="@+id/txt_score_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt_score"/>

    <TextView
        android:id="@+id/txt_essay_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="서술형"
        app:layout_constraintTop_toBottomOf="@id/txt_score_detail"/>

    <TextView
        android:id="@+id/txt_essay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt_essay_title"/>

</androidx.constraintlayout.widget.ConstraintLayout>