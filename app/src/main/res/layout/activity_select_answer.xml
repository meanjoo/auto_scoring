<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_select_answer_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="답안 선택"
        android:gravity="center"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <Spinner
        android:id="@+id/spinner_answer"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:spinnerMode="dropdown"
        android:dropDownWidth="match_parent"
        android:dropDownVerticalOffset="90dp"
        app:layout_constraintTop_toBottomOf="@id/txt_select_answer_title"/>

    <Button
        android:id="@+id/btn_add_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="답안 추가하기"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/btn_select_ok"/>

    <Button
        android:id="@+id/btn_select_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="선택 완료"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>